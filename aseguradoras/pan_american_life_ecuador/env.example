# Variables de Entorno para PAN AMERICAN LIFE DE ECUADOR
# Copia este archivo a .env en la raíz del proyecto y configura los valores

# ============================================================================
# INFORMACIÓN BÁSICA
# ============================================================================
PALE_EC_NOMBRE=PAN AMERICAN LIFE DE ECUADOR
PALE_EC_CODIGO=PALE_EC
PALE_EC_PAIS=Ecuador
PALE_EC_DESCRIPCION=Aseguradora Pan American Life en Ecuador
PALE_EC_ACTIVA=true

# ============================================================================
# URLs (REQUERIDAS)
# ============================================================================
PALE_EC_LOGIN_URL=https://portal.panamlife.com.ec/login
PALE_EC_DESTINO_URL=https://portal.panamlife.com.ec/dashboard
PALE_EC_BASE_URL=https://portal.panamlife.com.ec
PALE_EC_PORTAL_URL=https://portal.panamlife.com.ec

# ============================================================================
# CAMPOS DE LOGIN (REQUERIDOS)
# ============================================================================
PALE_EC_USERNAME_SELECTOR=#username
PALE_EC_PASSWORD_SELECTOR=#password
PALE_EC_USERNAME=conveniosyseguros@mediglobal.com.ec
PALE_EC_PASSWORD=Mediglobal1

# ============================================================================
# ACCIONES POST-LOGIN
# ============================================================================
PALE_EC_LOGIN_BUTTON_SELECTOR=a[title="Inicio de sesión"]
PALE_EC_LOGIN_BUTTON_WAIT=2

# ============================================================================
# CONFIGURACIÓN DE SELENIUM (REQUERIDAS)
# ============================================================================
PALE_EC_SELENIUM_TIMEOUT_PAGINA=30
PALE_EC_SELENIUM_TIMEOUT_ELEMENTOS=10
PALE_EC_SELENIUM_ESPERA_POST_LOGIN=5
PALE_EC_SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
PALE_EC_SELENIUM_WINDOW_SIZE=1920,1080
PALE_EC_SELENIUM_HEADLESS=true
PALE_EC_SELENIUM_OPCIONES_ESPECIALES=--no-sandbox,--disable-dev-shm-usage,--disable-gpu

# ============================================================================
# TIMEOUTS (REQUERIDOS)
# ============================================================================
PALE_EC_TIMEOUT_CARGA_PAGINA=45
PALE_EC_TIMEOUT_ELEMENTO_VISIBLE=15
PALE_EC_TIMEOUT_ELEMENTO_CLICABLE=10
PALE_EC_TIMEOUT_PROCESAMIENTO_LOGIN=20
PALE_EC_TIMEOUT_NAVEGACION=30

# ============================================================================
# VALIDACIONES POST-LOGIN
# ============================================================================
PALE_EC_URL_EXITO=https://portal.panamlife.com.ec/dashboard
PALE_EC_TITULO_EXITO=Dashboard - Pan American Life
PALE_EC_ELEMENTOS_ESPERADOS=.dashboard,.user-menu,.logout-button
PALE_EC_ELEMENTOS_NO_ESPERADOS=.login-form,.error-message

# ============================================================================
# MANEJO DE ERRORES
# ============================================================================
PALE_EC_ERRORES_CONOCIDOS=credenciales_invalidas,sesion_expirada,mantenimiento
PALE_EC_ERRORES_REINTENTOS=3
PALE_EC_ERRORES_ESPERA_ENTRE_REINTENTOS=5
PALE_EC_ERRORES_ACCIONES=limpiar_campos,recargar_pagina,verificar_conectividad

# ============================================================================
# LOGGING
# ============================================================================
PALE_EC_LOG_LEVEL=INFO
PALE_EC_LOG_ARCHIVO=pan_american_life_ecuador.log
PALE_EC_LOG_FORMATO=%(asctime)s - %(levelname)s - [PALE_EC] - %(message)s
PALE_EC_LOG_ROTACION=daily
PALE_EC_LOG_MAX_SIZE=10MB

# ============================================================================
# CACHÉ
# ============================================================================
PALE_EC_CACHE_HABILITADO=true
PALE_EC_CACHE_TIEMPO_VIDA=3600
PALE_EC_CACHE_MAX_ELEMENTOS=100
PALE_EC_CACHE_LIMPIAR_AUTOMATICO=true

# ============================================================================
# MONITOREO
# ============================================================================
PALE_EC_MONITOREO_HABILITADO=true
PALE_EC_MONITOREO_INTERVALO=300
PALE_EC_MONITOREO_METRICAS=tiempo_login,tasa_exito,errores_consecutivos
PALE_EC_MONITOREO_TIEMPO_MAX=30
PALE_EC_MONITOREO_TASA_EXITO_MIN=0.95
PALE_EC_MONITOREO_ERRORES_MAX=5

# ============================================================================
# SEGURIDAD
# ============================================================================
PALE_EC_SEGURIDAD_ENCRIPTAR=true
PALE_EC_SEGURIDAD_LOG_CREDENCIALES=false
PALE_EC_SEGURIDAD_VALIDAR_SSL=true
PALE_EC_SEGURIDAD_TIMEOUT_CONEXION=30
PALE_EC_SEGURIDAD_MAX_INTENTOS=3

# ============================================================================
# NOTIFICACIONES
# ============================================================================
PALE_EC_NOTIFICACIONES_HABILITADAS=true
PALE_EC_NOTIFICACIONES_CANALES=email,webhook
PALE_EC_NOTIFICACIONES_EVENTOS=login_exitoso,login_fallido,error_sistema
PALE_EC_NOTIFICACIONES_DESTINATARIOS=admin@mediglobal.com.ec,soporte@mediglobal.com.ec

# ============================================================================
# BACKUP Y RECUPERACIÓN
# ============================================================================
PALE_EC_BACKUP_HABILITADO=true
PALE_EC_BACKUP_FRECUENCIA=daily
PALE_EC_BACKUP_RETENER_DIAS=30
PALE_EC_BACKUP_COMPRIMIR=true
PALE_EC_BACKUP_UBICACION=./backups/pan_american_life_ecuador

# ============================================================================
# REPORTES
# ============================================================================
PALE_EC_REPORTES_HABILITADOS=true
PALE_EC_REPORTES_FRECUENCIA=daily
PALE_EC_REPORTES_FORMATO=PDF
PALE_EC_REPORTES_INCLUIR_LOGS=true
PALE_EC_REPORTES_INCLUIR_METRICAS=true
PALE_EC_REPORTES_ENVIAR_AUTOMATICO=true

# ============================================================================
# CONFIGURACIONES ADICIONALES
# ============================================================================
PALE_EC_DEBUG=false
PALE_EC_VERSION=1.0.0
PALE_EC_ULTIMA_ACTUALIZACION=2025-01-09
